{
	"name": "svelte-frontend",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview --port 5173",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"prepare-smui": "yarn smui-theme-dark",
		"smui-theme-light": "smui-theme compile static/smui-light.css -i src/theme/light",
		"smui-theme-dark": "smui-theme compile static/smui-dark.css -i src/theme/dark"
	},
	"devDependencies": {
		"@smui-extra/bottom-app-bar": "^8.0.3",
		"@smui/button": "^8.0.3",
		"@smui/card": "^8.0.3",
		"@smui/circular-progress": "^8.0.3",
		"@smui/common": "^8.0.3",
		"@smui/dialog": "^8.0.3",
		"@smui/fab": "^8.0.3",
		"@smui/icon-button": "^8.0.3",
		"@smui/layout-grid": "^8.0.3",
		"@smui/list": "^8.0.3",
		"@smui/menu": "^8.0.3",
		"@smui/paper": "^8.0.3",
		"@smui/segmented-button": "^8.0.3",
		"@smui/select": "^8.0.3",
		"@smui/snackbar": "^8.0.3",
		"@smui/textfield": "^8.0.3",
		"@smui/tooltip": "^8.0.3",
		"@sveltejs/adapter-auto": "^6.1.1",
		"@sveltejs/kit": "^2.43.8",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"svelte": "^5.39.8",
		"svelte-check": "^4.3.2",
		"typescript": "^5.0.0",
		"vite": "^7.1.9"
	},
	"dependencies": {
		"i18next": "^25.5.3",
		"i18next-http-backend": "^3.0.2",
		"smui-theme": "^8.0.3",
		"svelte-i18next": "^2.2.2",
		"uuid": "^13.0.0",
		"yarn": "^1.22.22"
	}
}
